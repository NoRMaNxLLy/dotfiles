# wm independent hotkeys

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

XF86Audio{Raise,Lower}Volume
    audio {up,down} 5%
    #pactl set-sink-volume @DEFAULT_SINK@ {+,-}5%

XF86AudioMute
    audio toggle
    #pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86MonBrightness{Up,Down}
    exec xbacklight -time 0 -{inc,dec} 5% && notify-send -t 375 $(xbacklight -get | cut -d'.' -f1)
    #light -{A,U} 5% ; exec $nsi notify-send -t 250 $(light)


# terminal emulator
super + Return
	exec st

# program launcher
super + d
	dmenu_run -p "launch:"

# pcmanfm
super + Home
    pcmanfm

# lockscreen
super + x
    exec scrlock

# stick the current window to the top
super + s
   stickit

# play youtube vid
super + y
    ytplay "$(fromclip)"

# run pomo
super + p
    if ! test -e /tmp/pomo; then pomo start; else pomo stop;fi
