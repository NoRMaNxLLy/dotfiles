# setting up some variables
set $mod Mod4
set $nsi --no-startup-id

#
exec $TERMINAL -e tmux_start

#font pango: DejaVu Sans mono, Font Awesome 6 free Solid 9
font pango: monospace 10

floating_modifier $mod

popup_during_fullscreen smart

#shutdown, restart, lock
set $systemctl choose wisely: [r]estart, [s]uspend, [l]ock, [e]xit, [p]oweroff
bindsym Ctrl+mod1+Delete mode "$systemctl"
mode "$systemctl"{
    bindsym r exec systemctl reboot -i
        bindsym s exec systemctl suspend -i, mode "default", exec i3lock -c 080808
        bindsym p exec systemctl poweroff -i
        bindsym l exec  i3lock --color 080808, mode "default"
        bindsym e exit

        bindsym Escape mode "default"
        bindsym Return mode "default"
}

focus_follows_mouse no
# idk
focus_on_window_activation none

set_from_resource $bg           background
set_from_resource $fg           foreground
set_from_resource $color0       color0
set_from_resource $color1       color1
set_from_resource $color2       color2
set_from_resource $color3       color3
set_from_resource $color4       color4
set_from_resource $color5       color5
set_from_resource $color6       color6
set_from_resource $color7       color7
set_from_resource $color8       color8
set_from_resource $color9       color9
set_from_resource $color10      color10
set_from_resource $color11      color11
set_from_resource $color12      color12
set_from_resource $color13      color13
set_from_resource $color14      color14
set_from_resource $color15      color15

# class                 border      backgr      text        indicator     child_border
client.focused          $color8     $bg         $fg         $fg           $fg
client.focused_inactive $color8     $bg         $fg         $gray         $gray
client.unfocused        $color8     $bg         $primary    $gray         $gray
client.urgent           #2f343a     #900000     #ffffff     #900000       #900000
client.placeholder      #000000     #0c0c0c     #ffffff     #000000       #0c0c0c
client.background       #ffffff

#I3BAR
bar {
    font pango: mononoki 22px
    #status_command i3status -c $HOME/.config/i3/i3status.conf
    status_command i3blocks -c $HOME/.config/i3/i3blocks.conf
    workspace_min_width 25px
    separator_symbol "  "
    strip_workspace_numbers yes
    mode dock
    modifier $mod+mod1
    position bottom
    # stop chaning workspaces
    bindsym button4 nop
    bindsym button5 nop

    colors {
            background $bg
            statusline $color7
            separator  $fg
#                              Border       background      text
            focused_workspace  $bg          $bg             $fg
            active_workspace   $primary     $primary        $fg
            inactive_workspace $bg          $bg             $color8
            urgent_workspace   $bg          $bg             $color1
            binding_mode       $bg          $bg             $color7
    }
}

